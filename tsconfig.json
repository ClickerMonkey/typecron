{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "target": "es5",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "outDir": "dist",
    "baseUrl": "src"
  },
  "include": ["src"]
}